	public void drawBackground() {
		wall = new Rectangle(0, 0, 1200, 400);
		counter = new Rectangle (0, 400, 1200, 200);
		
		wireTop = new Rectangle(0,10,1200,2);
		wireMiddle = new Rectangle(0, 12, 1200, 2);
		wireBottom = new Rectangle(0,14,1200,3);
		
		//ticket = new Rectangle(625, 70, 250, 400);
		
		orderButton = new Rectangle(30, 475, 100, 50);
		ticketCircle = new Ellipse2D.Double(1000, -20, 200, 200); 
		
	}
	public void paintComponent (Graphics g) {
		Graphics2D g2 = (Graphics2D) g;
		
		g2.setColor(Color.LIGHT_GRAY); //blue
		g2.fill(wall);
		
		g2.setColor(Color.GREEN); //grey
		g2.fill(counter);
		
		g2.setColor(new Color(192, 192, 192));
		g2.fill(wireMiddle);
		g2.setColor(Color.BLACK);
		g2.fill(wireTop);
		g2.fill(wireBottom);
	
		//g2.setColor(Color.WHITE);
		//g2.fill(ticket);
		
		g2.setColor(Color.RED);
		g2.fill(orderButton);
		
		g2.setColor(new Color(64, 64, 64));
		g2.fill(ticketCircle);
		
	}

	public static void main(String[] args) {
		JFrame.setDefaultLookAndFeelDecorated(true);
		JFrame myFrame = new JFrame ("Order"); 
		myFrame.setBounds(50,50,1200,600); 
		
		ArrayList <String > orders = new ArrayList <String>();
		ArrayList <String > price = new ArrayList<String>(); 
		JPanel panel = new OrderPanel(orders, price); 
		myFrame.add(panel);
	
	
		myFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		
		myFrame.setVisible(true);	
		
	}

	
	public static Orders random() {
		int patties = 1; 
		String condiments = "Ketchup";
		boolean cheese = true; 
		boolean lettuce = true; 
		boolean pickles = true; 
		boolean tomatoes = true; 
		boolean onion = true; 
		int random = (int) (Math.random() * 2) + 1; 
		if(random == 1) {
			cheese = false; 
		}
		random = (int) (Math.random() * 2) + 1;
		if(random == 1) {
			lettuce = false; 
		}
		random = (int) (Math.random() * 2) + 1;
		if(random == 1) {
			pickles = false; 
		}
		random = (int) (Math.random() * 2) + 1;
		if(random == 1) {
			tomatoes = false; 
		}
		random = (int) (Math.random() * 2) + 1;
		if(random == 1) {
			onion = false; 
		}
		random = (int) (Math.random() * 3) + 1;
		if(random == 1) {
			patties = 2; 
		}
		else if(random == 2) {
			patties = 3; 
		}
		random = (int) (Math.random() * 4) + 1;
		if(random == 1) {
			condiments = "Mayo"; 
		}
		else if(random == 2) {
			condiments = "Mustard"; 
		}
		else if(random == 3) {
			condiments = "Barbeque";
		}
		Orders newOrder = new Orders(patties, condiments, cheese, lettuce, pickles, tomatoes, onion);
		return newOrder; 
	}
	
	public static String orderofOrders(Orders order, ArrayList <String> ticketInformation) {
		ArrayList <String> theOrder = new ArrayList <String>(); 
		String complete = order.getTicketNumber() + ","; 
		
		theOrder.add(order.getCondiments()); 
		for(int i = 0; i < order.getPatties(); i ++) {
			theOrder.add("Patties");
		}
		if(order.getCheese() == true) {
			theOrder.add("Cheese");
		}
		if(order.getLettuce() == true) {
			theOrder.add("Lettuce");
		}
		if(order.getTomatoes() == true) {
			theOrder.add("Tomatoes");
		}
		if(order.getPickles() == true) {
			theOrder.add("Pickles");
		}
		if(order.getOnions() == true) {
			theOrder.add("Onions");
		}
		String done = ""; 
		done += "Top Bun \n";
		for(int i = 0; i < order.getTotal(); i++) {
			int random = (int) (Math.random())*theOrder.size(); 
			done += theOrder.get(random) + "\n";
			complete += theOrder.get(random) + ",";
			theOrder.remove(random);
		} 
		done += "Bottom Bun";
		complete += "Bottom Bun"; 
		ticketInformation.add(complete);
		return done; 
		
	}
	


}
