import java.awt.geom.Rectangle2D.Double;

public class Orders {
	
	//patty $1 
	//veggies $0.25 
	//cheese $0.50 
	//sauce $50 
	//buns $0.80
	private int patties; 
	private String condiments; 
	private boolean cheese; 
	private boolean lettuce; 
	private boolean pickles; 
	private boolean tomatoes; 
	private boolean onions;
	private static int ticketNumber = 0; 
	private double price; 
	
	public Orders(int p, String c, boolean ch, boolean l, boolean pi, boolean t, boolean o) {
		patties = p; 
		price += p; 
		condiments = c;
		price += 0.5; 
		cheese = ch; 
		if(cheese) {
			price += 0.5; 
		}
		lettuce = l; 
		if(lettuce) {
			price += 0.25; 
		}
		pickles = pi; 
		if(pickles) {
			price += 0.25; 
		}
		tomatoes = t; 
		if(tomatoes) {
			price += 0.25; 
		}
		onions = o; 
		if(onions) {
			price += 0.25; 
		}
		price += 0.80; 
		ticketNumber ++; 
	}
	
	public int getPatties() {
		return patties;
	}
	
	public String getCondiments() {
		return condiments; 
	}
	
	public boolean getCheese() {
		return cheese;
	}
	
	public boolean getLettuce() {
		return lettuce;
	}
	
	public boolean getPickles() {
		return pickles; 
	}
	
	public boolean getTomatoes() {
		return tomatoes; 
	}
	
	public boolean getOnions() {
		return onions; 
	}
	
	public int getTicketNumber() {
		return ticketNumber; 
	}
	public int getTotal() {
		int total = patties + 1; 
		if(cheese) {
			total ++;
		}
		if(lettuce) {
			total ++; 
		}
		if(pickles) {
			total ++; 
		}
		if(tomatoes) {
			total ++;
		}
		if(onions) {
			total ++;
		}
		return total;
	}
	public double getPrice() {
		return price; 
	}

}

